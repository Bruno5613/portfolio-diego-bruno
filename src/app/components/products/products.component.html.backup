<!-- Professional Sales Page - Creative Market Style -->
<div class="min-h-screen bg-white dark:bg-gray-900" *ngFor="let product of products; trackBy: trackByProduct">
  
  <!-- Navigation Breadcrumb -->
  <div class="bg-gray-50 dark:bg-gray-800/50 border-b border-gray-200 dark:border-gray-700 pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <nav class="text-sm">
        <span class="text-gray-500 dark:text-gray-400">Products</span>
        <span class="text-gray-400 mx-2">/</span>
        <span class="text-gray-900 dark:text-white font-medium">{{ product.title }}</span>
      </nav>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid lg:grid-cols-3 gap-8">
      
      <!-- Main Content -->
      <div class="lg:col-span-2">
        
        <!-- Product Header -->
        <div class="mb-8">
          <div class="flex items-center gap-3 mb-4">
            <span class="bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 px-3 py-1 rounded-full text-sm font-medium">{{ product.category }}</span>
            <span *ngIf="product.isNew" class="bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 px-3 py-1 rounded-full text-sm font-medium">New</span>
            <span *ngIf="product.isFeatured" class="bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200 px-3 py-1 rounded-full text-sm font-medium">Best Seller</span>
            <span *ngIf="product.discount" class="bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200 px-3 py-1 rounded-full text-sm font-medium">{{ product.discount }}% OFF</span>
          </div>
          
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            {{ product.title }}
          </h1>
          
          <p class="text-xl text-gray-600 dark:text-gray-300 mb-6">
            {{ product.shortDescription }}
          </p>

          <!-- Stats -->
          <div class="flex items-center gap-6 text-sm text-gray-500 dark:text-gray-400">
            <div class="flex items-center gap-1" *ngIf="product.stats?.rating">
              <div class="flex text-yellow-400">
                <svg *ngFor="let star of [1,2,3,4,5]" class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              </div>
              <span class="ml-1">{{ product.stats.rating }} ({{ product.stats.reviews }} reviews)</span>
            </div>
            <span *ngIf="product.stats?.downloads">•</span>
            <span *ngIf="product.stats?.downloads">{{ product.stats.downloads }}+ downloads</span>
            <span>•</span>
            <span>Built by Computer Engineer</span>
          </div>
        </div>

        <!-- Interactive Carousel -->
        <div class="mb-8" *ngIf="product.images.carousel">
          <div class="relative max-w-5xl mx-auto">
            
            <!-- Carousel Content -->
            <div class="relative overflow-hidden rounded-lg aspect-video">
              
              <!-- Slides -->
              <div class="relative h-full">
                <div *ngFor="let slide of product.images.carousel; let i = index" 
                     class="absolute inset-0 transition-all duration-500 ease-in-out"
                     [class.opacity-100]="i === currentSlide"
                     [class.opacity-0]="i !== currentSlide">
                  
                  <!-- Image Slide -->
                  <div *ngIf="slide.type === 'image'" class="h-full">
                    <img [src]="slide.src" 
                         [alt]="slide.alt" 
                         class="w-full h-full object-cover"
                         loading="lazy" />
                  </div>
                  
                  <!-- Video Slide -->
                  <div *ngIf="slide.type === 'video'" class="h-full">
                    <video [src]="slide.src" 
                           class="w-full h-full object-cover"
                           autoplay 
                           muted 
                           loop 
                           playsinline
                           [attr.aria-label]="slide.alt">
                      Your browser does not support the video tag.
                    </video>
                  </div>
                  
                </div>
              </div>

              <!-- Navigation Arrows -->
              <button (click)="prevSlide(product)" 
                      class="absolute left-2 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white rounded-full p-2 transition-all duration-200">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
              </button>
              
              <button (click)="nextSlide(product)" 
                      class="absolute right-2 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white rounded-full p-2 transition-all duration-200">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </button>

            </div>

            <!-- Slide Indicators -->
            <div class="flex justify-center mt-4 space-x-2">
              <button *ngFor="let slide of product.images.carousel; let i = index"
                      (click)="goToSlide(i)"
                      class="w-2 h-2 rounded-full transition-all duration-200"
                      [class.bg-blue-600]="i === currentSlide"
                      [class.bg-gray-400]="i !== currentSlide"
                      [attr.aria-label]="'Go to slide ' + (i + 1)">
              </button>
            </div>

          </div>
        </div>

        <!-- Product Overview -->
        <div class="mb-12">
          <div class="prose prose-lg max-w-none dark:prose-invert">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Complete SaaS Landing Page System</h2>
            <p class="text-xl text-gray-700 dark:text-gray-300 mb-8 leading-relaxed">
              {{ product.description }}
            </p>
          </div>
        </div>

        <!-- Package Contents -->
        <div class="mb-12" *ngIf="product.whatYouGet">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Package Contents</h2>
          
          <div class="grid lg:grid-cols-3 gap-6">
            <div *ngFor="let section of product.whatYouGet" class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6">
              <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 pb-2 border-b border-gray-200 dark:border-gray-700">{{ section.title }}</h3>
              <ul class="space-y-2">
                <li *ngFor="let item of section.items" class="flex items-start text-sm">
                  <span class="w-1.5 h-1.5 bg-blue-500 rounded-full mt-2 mr-3 flex-shrink-0"></span>
                  <span class="text-gray-700 dark:text-gray-300">{{ item }}</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Theme Showcase Infinite Carousel -->
        <div class="mb-16" *ngIf="product.themes">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">All 11 Professional Themes</h2>
          <p class="text-lg text-gray-600 dark:text-gray-400 text-center mb-10">Each theme includes Light + Dark mode variations</p>
          
          <div class="relative max-w-6xl mx-auto" 
               (mouseenter)="pauseAutoScroll()" 
               (mouseleave)="resumeAutoScroll()">
            
            <!-- Carousel Container -->
            <div class="overflow-hidden rounded-2xl">
              <div class="flex transition-transform duration-500 ease-in-out"
                   [style.transform]="'translateX(-' + (currentUseCaseSlide * 33.333) + '%)'">
                
                <!-- Theme Cards -->
                <div *ngFor="let theme of product.themes; let i = index" 
                     class="flex-shrink-0 px-3 transition-all duration-500"
                     [class.w-2/5]="i % 3 === 1"
                     [class.w-1/3]="i % 3 !== 1">
                  
                  <div class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-500 border border-gray-200 dark:border-gray-700"
                       [class.scale-110]="i % 3 === 1"
                       [class.z-10]="i % 3 === 1"
                       [class.shadow-2xl]="i % 3 === 1"
                       [class.hover:-translate-y-4]="i % 3 === 1"
                       [class.hover:-translate-y-2]="i % 3 !== 1"
                       [class.opacity-90]="i % 3 !== 1">
                    
                    <div class="relative group"
                         [class.aspect-[4/3]]="i % 3 === 1"
                         [class.aspect-video]="i % 3 !== 1">
                      <img [src]="theme.image" 
                           [alt]="theme.name + ' - ' + theme.style" 
                           class="w-full h-full object-cover"
                           loading="lazy" />
                      
                      <!-- Enhanced overlay for center card -->
                      <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                        <span class="text-white font-semibold" 
                              [class.text-lg]="i % 3 === 1"
                              [class.text-sm]="i % 3 !== 1">
                          {{ theme.description }}
                        </span>
                      </div>

                      <!-- Featured badge for center card -->
                      <div *ngIf="i % 3 === 1" class="absolute top-3 left-3">
                        <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-xs font-bold shadow-lg">
                          Featured
                        </span>
                      </div>
                    </div>
                    
                    <div class="p-4"
                         [class.p-6]="i % 3 === 1">
                      <div class="flex items-center justify-between mb-2">
                        <h3 class="font-semibold text-gray-900 dark:text-white" 
                            [class.text-lg]="i % 3 === 1"
                            [class.text-sm]="i % 3 !== 1">
                          {{ theme.name }}
                        </h3>
                        <span class="px-2 py-1 rounded-full font-medium"
                              [class.text-sm]="i % 3 === 1"
                              [class.text-xs]="i % 3 !== 1"
                              [class]="theme.style === 'dark' ? 'bg-gray-800 text-white dark:bg-gray-600' : 'bg-gray-200 text-gray-800'">
                          {{ theme.style }}
                        </span>
                      </div>
                      <p *ngIf="i % 3 === 1" class="text-sm text-gray-600 dark:text-gray-400 mt-2">
                        {{ theme.description }}
                      </p>
                    </div>
                  </div>
                </div>
                
              </div>
            </div>

            <!-- Navigation Arrows -->
            <button (click)="prevUseCaseSlide()" 
                    class="absolute left-4 top-1/2 -translate-y-1/2 bg-white/90 dark:bg-gray-800/90 hover:bg-white dark:hover:bg-gray-800 text-gray-800 dark:text-white rounded-full p-3 shadow-lg transition-all duration-200 hover:scale-110 z-10">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
            </button>
            
            <button (click)="nextUseCaseSlide()" 
                    class="absolute right-4 top-1/2 -translate-y-1/2 bg-white/90 dark:bg-gray-800/90 hover:bg-white dark:hover:bg-gray-800 text-gray-800 dark:text-white rounded-full p-3 shadow-lg transition-all duration-200 hover:scale-110 z-10">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Use Cases -->
        <div class="mb-16" *ngIf="product.perfectFor">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Use Cases</h2>
          <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-8">
            <div class="grid md:grid-cols-2 gap-6">
              <div *ngFor="let item of product.perfectFor" class="flex items-start p-4 rounded-lg bg-gray-50 dark:bg-gray-700">
                <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 mr-4 flex-shrink-0"></div>
                <span class="text-gray-800 dark:text-gray-200 font-medium">{{ item }}</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Features -->
        <div class="mb-16" *ngIf="product.keyHighlights">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Features</h2>
          <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-8">
            <div class="grid md:grid-cols-2 gap-6">
              <div *ngFor="let highlight of product.keyHighlights" class="flex items-start">
                <div class="w-2 h-2 bg-green-500 rounded-full mt-2 mr-4 flex-shrink-0"></div>
                <span class="text-gray-800 dark:text-gray-200">{{ highlight }}</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Technical Information -->
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Technical Information</h2>
          <div class="grid md:grid-cols-2 gap-6">
            <!-- Technology Stack -->
            <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6 pb-3 border-b border-gray-200 dark:border-gray-700">
                Technology Stack
              </h3>
              <div class="space-y-4">
                <div *ngFor="let tech of product.specifications.technology" class="flex items-center p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                  <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
                  <span class="text-gray-800 dark:text-gray-200 font-medium">{{ tech }}</span>
                </div>
              </div>
            </div>
            
            <!-- Compatibility -->
            <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6 pb-3 border-b border-gray-200 dark:border-gray-700">
                Compatibility
              </h3>
              <div class="space-y-4">
                <div *ngFor="let compat of product.specifications.compatibility" class="flex items-center p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
                  <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
                  <span class="text-gray-800 dark:text-gray-200 font-medium">{{ compat }}</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- What's Included -->
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">What's Included</h2>
          <div class="bg-gray-50 dark:bg-gray-800 rounded-2xl p-8">
            <div class="bg-gray-900 dark:bg-gray-700 rounded-lg p-6 mb-6 font-mono text-sm text-green-400">
              <div>saas-landing-page-starter-pack/</div>
              <div class="ml-2">├── templates/ (2 complete HTML pages)</div>
              <div class="ml-2">├── components/ (12 modular components)</div>
              <div class="ml-2">├── assets/ (CSS, JS, images, icons)</div>
              <div class="ml-2">├── documentation/ (3 comprehensive guides)</div>
              <div class="ml-2">├── package.json (build tools included)</div>
              <div class="ml-2">└── README.md (quick start guide)</div>
            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
              <div *ngFor="let include of product.specifications.includes" class="flex items-start p-4 bg-white dark:bg-gray-700 rounded-lg">
                <svg class="w-5 h-5 text-purple-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
                </svg>
                <span class="text-sm text-gray-700 dark:text-gray-300">{{ include }}</span>
              </div>
            </div>
          </div>
        </div>

      </div>
      
      <!-- Sticky Sidebar -->
      <div class="lg:col-span-1">
        <div class="sticky top-8">
          <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl p-6 shadow-lg mb-6">
            <!-- Pricing -->
            <div class="text-center mb-6">
              <div class="flex items-center justify-center gap-3 mb-2">
                <span *ngIf="product.originalPrice" class="text-lg text-gray-500 dark:text-gray-400 line-through">{{ product.originalPrice }}</span>
                <span class="text-3xl font-bold text-gray-900 dark:text-white">{{ product.price }}</span>
              </div>
              <div *ngIf="product.discount" class="text-sm text-red-600 dark:text-red-400 font-medium">
                Save {{ product.discount }}% - Limited Time Offer!
              </div>
            </div>

            <!-- Purchase Button -->
            <a [href]="product.links.purchase" target="_blank" 
               class="w-full bg-blue-600 text-white font-semibold py-4 px-6 rounded-lg hover:bg-blue-700 transition-colors text-center block text-lg mb-4">
              Get Instant Access
            </a>

            <!-- Guarantees -->
            <div class="space-y-3 text-sm text-gray-600 dark:text-gray-400">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Instant download after purchase
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                30-day money-back guarantee
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Lifetime updates included
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                6 months technical support
              </div>
            </div>
          </div>

          <!-- Live Demo -->
          <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
            <a [href]="product.links.demo" target="_blank" 
               class="w-full bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white font-medium py-3 px-6 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors text-center block">
              Live Demo
            </a>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>